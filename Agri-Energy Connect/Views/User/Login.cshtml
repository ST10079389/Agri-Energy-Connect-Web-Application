@model ST10079389_Kaushil_Dajee_PROG7311.Models.User

@{
    ViewData["Title"] = "Login";
}
<head>
    <link rel="stylesheet" href="~/css/LoginStyle.css" />
</head>
<img src="\Images\agri-energy-connect-high-resolution-logo-black-transparent.png" style="display: block; margin-left: auto; margin-right: auto; width: 25%; padding-top:55px" />
<h4>Login</h4>
<h4>Please enter account details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Username</label>
                <input asp-for="Name" class="form-control" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" autocomplete="off" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label">Role</label>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" style="border:none; width:250px; height:auto; background-color:purple; font-size:20px"/>
            </div>
            <hr />
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}