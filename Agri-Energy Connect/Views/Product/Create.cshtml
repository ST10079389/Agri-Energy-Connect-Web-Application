@model ST10079389_Kaushil_Dajee_PROG7311.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_FarmerLayout.cshtml";
}

<h1>Create Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Product Name</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionDate" class="control-label">Production Date</label>
                <input asp-for="ProductionDate" class="form-control" type="date" />
                <span asp-validation-for="ProductionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="border:none; width:250px; height:auto; background-color:purple; font-size:20px"/>
            </div>
        </form>
    </div>
</div>
<hr/>

<img src="\Images\pexels-nc-farm-bureau-mark-2886937.jpg" style="height: 400px; display: block; margin-left: auto; margin-right: auto" />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
